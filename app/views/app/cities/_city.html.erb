<div id="<%= dom_id city %>" class='card group' data-controller="reveal" data-reveal-hidden-class="grid">

  <div class="card-header">

    <div class="card-header-info card-header-animate">
      <p class="card-header-title"><%= link_to city.name, app_city_path(city), class:'card-header-title' %></p>
      <p class="card-header-subtitle card-header-subtitle-animate"><%= get_state_name(city.state) %></p>
    </div>

    <%= button_tag class:'card-header-btn',  data: { action:"click->reveal#toggle" } do %>
      <%= icon('fa-solid','bars', class:'fa-sm')%>
    <%end%>

  </div>

  <div data-reveal-target="item" class="card-popover w-1/3" data-action="mouseleave->reveal#show">
  
    <%= link_to edit_app_city_path(city), class:'card-popover-btn-primary' do %>
      <%= icon('fa-solid', 'pen-to-square', class:'btn-icon') %>
      <p class=""> <%= t('views.app.general.edit')%></p>
    <%end%>

  </div>

</div>
