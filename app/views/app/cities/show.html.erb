<% content_for :ctas_primary do %>
   <%= link_to new_app_institution_path(city_id: @app_city), class: "btn-primary flex-none" do %>
    <%= icon('fa-solid','plus',class:'btn-icon') %>
    <%= App::Institution.model_name.human %>
  <% end %>
<% end %>

<% content_for :ctas_secondary do %>
  <%= link_to app_cities_path, class: "btn-secondary-gray flex-none" do %>
    <%= icon('fa-solid','arrow-left', class:'-mx-1')%>
  <%end%>

  <%= link_to edit_app_city_path(@app_city), class: "btn-secondary flex-none" do %>
    <%= icon('fa-solid','pen-to-square', class:'-mx-1')%>
  <%end%>

  <%= button_to app_city_path(@app_city), method: :delete, data: { turbo: false },onclick: "return confirm('#{t('views.app.general.delete_confirm')}')", class: "btn-delete flex-none" do %>
    <%= icon('fa-solid','trash-can', class:'-mx-1')%>
  <%end%>
<% end %>

<% provide :head_title, "#{t('views.app.general.showing')} #{App::City.model_name.human} " %>
<% provide :page_title, "#{t('views.app.general.showing')} #{App::City.model_name.human} " %>
<% provide :entry_id, "#{@app_city.id}" %>

<% content_for :page_content do %>
  <%= render "detail", app_city: @app_city %>
<%end%>
