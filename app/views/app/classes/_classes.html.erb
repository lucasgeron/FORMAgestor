<div class=" sticky-1 flex items-center  space-x-2 " data-aos='fade'>

  <%= link_to app_institution_path(@app_institution), class:'card-header-image overflow-clip' do %>
    <% if @app_institution.image.attached? %>
      <%= image_tag(@app_institution.image, class:'object-cover h-18 w-18')%>
    <% else %>
      <%= icon('fa-solid', 'building-columns', class:'fa-2xl dark:text-gray-900')%>
    <% end %>
  <% end %>

  <div class="">
    <p class="font-bold text-2xl "> <%= @app_institution.abreviation %> </p>
    <p class=""><%= @app_institution.name %></p>
  </div>

</div>

<div class="overflow-x-scroll scrollbar-hide space-y-4 relative">

  <% @app_calendars.each do |calendar| %>

    <%# CALENDAR BAR%>
    <div class="sticky left-0 "data-aos='fade'>
      <p class="font-bold text-xl py-1.5" >
        <span class="px-2 bg-gray-100 dark:bg-gray-900 rounded-lg py-1.5 "><%= calendar.name %> </span>
      </p>
    </div>

   


    <div class="horizontal-grid space-x-4">
      <% @app_negotiations.by_calendar(calendar.id).each do |negotiation| %>
        <div class="horizontal-grid-item">
          <%= render negotiation %>
        </div>
      <%end%>

    </div>
<% end %>
</div>

