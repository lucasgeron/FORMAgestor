<%= form_with(model: client, url: client.new_record? ? app_clients_path : app_client_path(client), class: "contents") do |form| %>

  <% if client.errors.any? %>
    <% flash.now[:error] = client.errors.to_a%>
  <% end %>

  <div class="grid grid-cols-1 xl:grid-cols-4 gap-4">

    <div class="">
      <%= form.label :name, class:'' %>
      <%= form.text_field :name, class:"form-input", placeholder:" " %>
    </div>

    <div class="">
      <%= form.label :cnpj, class:'' %> 
      <%= form.text_field :cnpj, class:"form-input", placeholder:" " %>
    </div>


    <div class="">
      <%= form.label :licenses, class:'' %>
      <%= form.text_field :licenses, class:"form-input", placeholder:" " %>
    </div>

    <div class="group">
      <%= form.label :active, class:'pointer-events-none' %>
      <%= form.check_box :active, class: "hidden peer" %>
      <%= form.label :active, class:'form-checkbox w-full 
        group-hover:bg-gray-100        group-hover:peer-checked:bg-blue-700  
        dark:group-hover:bg-gray-700   dark:group-hover:peer-checked:bg-blue-700' do %>
      <% end %>

      <div class="text-base peer-text hidden peer-checked:block "> <%= icon('fa-solid','check')%> <%= t('activerecord.attributes.client.active_status.true')%></div>
      <div class="text-base peer-text block peer-checked:hidden "> <%= icon('fa-solid','xmark')%> <%= t('activerecord.attributes.client.active_status.false')%></div>
    </div>

  </div>

  <div class="mt-4 inline-flex w-full justify-end">
    <%= form.submit class: "btn-primary" %>
  </div>
<% end %>
