<% content_for :ctas_primary do %>
  <%= link_to new_app_client_path, class: "btn-primary flex-none" do %>
    <%= icon('fa-solid','plus',class:'btn-icon') %>
    <%= App::Client.model_name.human %>
  <% end %>
  <% if @job.present? %>
    <%= button_to recalculate_periods_app_clients_path, method: :post,  class: "btn-secondary bg-gray-200 dark:bg-gray-800  flex-none pointer-events-none" do %>
      <%= icon('fa-solid','rotate',class:'btn-icon') %>
      Recalcular Períodos
    <% end %>
  <% else %>
    <%= button_to recalculate_periods_app_clients_path, method: :post,  class: "btn-primary flex-none" do %>
      <%= icon('fa-solid','rotate',class:'btn-icon') %>
      Recalcular Períodos
    <% end %>
  <% end %>
<% end %>

<% provide :head_title, App::Client.model_name.human.pluralize %>
<% provide :page_title, App::Client.model_name.human.pluralize %>
<% provide :sidebar, render(partial: 'app/clients/sidebar') %>

<% content_for :page_content do %>
<div class="pointer-events-none"></div>
  <%= render partial: 'progress_bar' %>
  <%= render partial: 'clients' %>
<%end%>
