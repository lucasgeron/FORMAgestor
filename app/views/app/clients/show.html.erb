<% content_for :ctas_secondary do %>
  <%= link_to app_clients_path, class: "btn-secondary-gray flex-none" do %>
    <%= icon('fa-solid','arrow-left', class:'-mx-1')%>
  <%end%>

  <%= link_to edit_app_client_path(@app_client), class: "btn-secondary flex-none" do %>
    <%= icon('fa-solid','pen-to-square', class:'-mx-1')%>
  <%end%>

  <%= button_to app_client_path(@app_client), method: :delete, class: "btn-delete flex-none" do %>
    <%= icon('fa-solid','trash-can', class:'-mx-1')%>
  <%end%>

<% end %>
   
<% provide :head_title, "#{t('views.app.general.showing')} #{App::Client.model_name.human} " %>
<% provide :page_title, "#{t('views.app.general.showing')} #{App::Client.model_name.human} " %>
<% provide :entry_id, "#{@app_client.id}" %>

<% content_for :page_content do %>
  <%= render "detail", app_client: @app_client %>
<%end%>

