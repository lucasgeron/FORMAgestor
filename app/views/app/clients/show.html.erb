

<% content_for :ctas_secondary do %>
  <%= link_to app_clients_path, class: "btn-secondary-gray flex-none" do %>
    <%= icon('fa-solid','arrow-left', class:'-mx-1')%>
  <%end%>

  <%= link_to edit_app_client_path(@client), class: "btn-secondary flex-none" do %>
    <%= icon('fa-solid','pen-to-square', class:'-mx-1')%>
  <%end%>

  <%= button_to app_client_path(@client), method: :delete, class: "btn-delete flex-none" do %>
    <%= icon('fa-solid','trash-can', class:'-mx-1')%>
  <%end%>

<% end %>
   
<% provide :head_title, "#{t('views.app.general.showing')} #{Client.model_name.human} " %>
<% provide :page_title, "#{t('views.app.general.showing')} #{Client.model_name.human} " %>

<% content_for :page_content do %>
  <%= render "detail", client: @client %>
<%end%>

