<% content_for :ctas_primary do %>
   <%= link_to search_app_negotiations_path(company_ids: [@app_company]), class: "btn-primary flex-none" do %>
    <%= icon('fa-solid','table-columns',class:'btn-icon') %>
    <%= App::Negotiation.model_name.human(count: 2) %>
  <% end %>
<% end %>

<% content_for :ctas_secondary do %>
  <%= link_to app_companies_path, class: "btn-secondary-gray flex-none" do %>
    <%= icon('fa-solid','arrow-left', class:'-mx-1')%>
  <%end%>

  <%= link_to edit_app_company_path(@app_company), class: "btn-secondary flex-none" do %>
    <%= icon('fa-solid','pen-to-square', class:'-mx-1')%>
  <%end%>

  <%= button_to app_company_path(@app_company), method: :delete, data: { turbo: false },onclick: "return confirm('#{t('views.app.general.delete_confirm')}')", class: "btn-delete flex-none" do %>
    <%= icon('fa-solid','trash-can', class:'-mx-1')%>
  <%end%>
<% end %>

<% provide :head_title, "#{t('views.app.general.showing')} #{App::Company.model_name.human} " %>
<% provide :page_title, "#{t('views.app.general.showing')} #{App::Company.model_name.human} " %>
<% provide :entry_id, "#{@app_company.id}" %>

<% content_for :page_content do %>
  <%= render "detail", app_company: @app_company %>
<%end%>
