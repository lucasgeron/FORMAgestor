<div id="<%= dom_id institution %>" class='card group' data-turbo="false">

  <div class="card-header">

    <div class="card-header-image ">
      <% if institution.image.attached? %>
        <%= link_to app_institution_path(institution) do %>
        <%= image_tag(institution.image, class:'')%>
        <%end %>
      <%else%>
        <%= icon('fa-solid', 'building-columns', class:'')%>
      <%end%>
    </div>

    <div class="card-header-info card-header-animate">
      <p class="card-header-title"><%= link_to institution.abreviation, app_institution_path(institution), class:'card-header-title' %></p>
      <p class="card-header-subtitle card-header-subtitle-animate"><%= institution.city.name %></p>
      <p class="card-header-subtitle card-header-subtitle-animate truncate"><%= icon('fa-solid', 'chalkboard-user')%> 0 </p>
    </div>

    <%= button_tag class:'card-header-btn', data: { popover_target: "popover-click-#{institution.id}", popover_trigger: "click", popover_placement:"left" } do %>
      <%= icon('fa-solid','bars', class:'fa-sm')%>
    <%end%>

  </div>

  <div data-popover id="popover-click-<%=institution.id%>" role="tooltip" class="card-popover invisible">

    <%= link_to edit_app_institution_path(institution), class:'card-popover-btn-primary' do %>
      <%= icon('fa-solid', 'pen-to-square', class:'btn-icon') %>
      <p class=""> <%= t('views.app.general.edit')%></p>
    <%end%>

    <div data-popper-arrow></div>
  </div>

</div>
