<% content_for :ctas_secondary do %>
  <%= link_to app_institutions_path, class: "btn-secondary-gray flex-none" do %>
    <%= icon('fa-solid','arrow-left', class:'-mx-1')%>
  <%end%>

  <%= link_to app_institution_path(@app_institution), class: "btn-secondary flex-none" do %>
    <%= icon('fa-solid','arrow-up-right-from-square', class:'-mx-1')%>
  <%end%>

  <%= button_to destroy_attachment_app_institution_path(@app_institution), method: :delete, class: "btn-delete flex-none" do %>
    <%= icon('fa-solid','image', class:'-mx-1')%>
  <%end if @app_institution.image.attached?%>


<% end %>

<% provide :head_title, "#{t('views.app.general.editing')} #{App::Institution.model_name.human}" %>
<% provide :page_title, "#{t('views.app.general.editing')} #{App::Institution.model_name.human}" %>
<% provide :entry_id, "#{@app_institution.id}" %>

<% content_for :page_content do %>
  <%= render "form", app_institution: @app_institution %>
<%end%>
