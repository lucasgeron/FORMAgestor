<div class="w-full  space-y-4 ">

  <div class="">
    <p class=""><%= App::Prospect.human_attribute_name('vendor_id') %></p>
    <div class="relative">

      <% if @app_prospect.vendor  %>
        <%= link_to @app_prospect.vendor, class:'detail-input-icon' do %>
          <%= icon('fa-solid','user', class:'') %>
        <%end %>
      <% else %>
        <%= icon('fa-solid','user', class:'detail-input-icon-disabled') %>
      <% end %>

      <p class="detail-input with-icon"><%= @app_prospect.vendor ? @app_prospect.vendor.name : t('activerecord.options.app/prospect.vendor_id.none') %> </p>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-4">

    <div class="">
      <p class=""><%= App::Prospect.human_attribute_name('name') %></p>
      <p class="detail-input"><%= @app_prospect.name.present? ? @app_prospect.name : t('activerecord.options.general.blank') %></p>
    </div>

    <div class="">
      <p class=""><%= App::Prospect.human_attribute_name('phone') %></p>
      <p class="detail-input"><%= @app_prospect.phone.present? ? @app_prospect.phone : t('activerecord.options.general.blank') %></p>
    </div>

    <div class="">
      <p class=""><%= App::Prospect.human_attribute_name('instagram') %></p>
      <div class="relative ">
        <% if app_prospect.instagram.present? %>
          <%= link_to "https://www.instagram.com/#{app_prospect.instagram}", target:'_blank', class:'detail-input-icon' do  %>
            <%= icon('fa-brands','instagram')%>
          <%end%>
          <p class="detail-input with-icon"><%= app_prospect.instagram%></p>
        <%else%>
            <%= icon('fa-brands','instagram', class:'detail-input-icon hover:text-inherit')%>
            <p class="detail-input with-icon"><%= t('activerecord.options.general.blank') %></p>
        <% end %>
      </div>
    </div>

    <div class="">
      <p class=""><%= App::Prospect.human_attribute_name('city') %></p>
      <p class="detail-input"><%= @app_prospect.city.present? ? @app_prospect.city : t('activerecord.options.general.blank') %></p>
    </div>

    <div class="">
      <p class=""><%= App::Prospect.human_attribute_name('institution') %></p>
      <p class="detail-input"><%= @app_prospect.institution.present? ? @app_prospect.institution : t('activerecord.options.general.blank') %></p>
    </div>

    <div class="">
      <p class=""><%= App::Prospect.human_attribute_name('course') %></p>
      <p class="detail-input"><%= @app_prospect.course.present? ? @app_prospect.course : t('activerecord.options.general.blank') %></p>
    </div>

    <div class="">
      <p class=""><%= App::Prospect.human_attribute_name('amount') %></p>
      <p class="detail-input"><%= @app_prospect.amount.present? ? @app_prospect.amount : t('activerecord.options.general.blank') %></p>
    </div>

    <div class="">
      <p class=""><%= App::Prospect.human_attribute_name('year_graduation') %></p>
      <p class="detail-input"><%= @app_prospect.year_graduation.present? ? @app_prospect.year_graduation : t('activerecord.options.general.blank') %></p>
    </div>

    <div class="">
      <p class=""><%= App::Prospect.human_attribute_name('channel') %></p>
      <p class="detail-input"><%= @app_prospect.channel.present? ? @app_prospect.channel : t('activerecord.options.general.blank') %></p>
    </div>

  </div>
