    <div class="">
      <p class=""><%= App::Prospect.human_attribute_name('year_graduation') %></p>
      <p class="detail-input"><%= @app_prospect.year_graduation.present? ? @app_prospect.year_graduation : t('activerecord.options.general.blank') %></p>
    </div>

    <div class="">
      <p class=""><%= App::Prospect.human_attribute_name('channel') %></p>
      <p class="detail-input"><%= @app_prospect.channel.present? ? @app_prospect.channel : t('activerecord.options.general.blank') %></p>
    </div>

  </div>
