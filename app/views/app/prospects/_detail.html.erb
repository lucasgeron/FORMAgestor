    </div>

    <div class="">
      <p class=""><%= App::Prospect.human_attribute_name('city') %></p>
      <p class="detail-input"><%= @app_prospect.city.present? ? @app_prospect.city : t('activerecord.options.general.blank') %></p>
    </div>

    <div class="">
      <p class=""><%= App::Prospect.human_attribute_name('institution') %></p>
