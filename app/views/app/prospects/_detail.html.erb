<div class="w-full py-4 space-y-4 ">

  <div class="">
    <p class=""><%= App::Prospect.human_attribute_name('vendor_id') %></p>
    <div class="relative">
      
      <% if @app_prospect.vendor  %>
      <%= link_to @app_prospect.vendor, class:'detail-input-icon' do %>
        <%= icon('fa-solid','user', class:'') %>
      <%end %>
      <% else %>
        <%= icon('fa-solid','user', class:'detail-input-icon-disabled') %>
      <% end %>
      
        <p class="detail-input with-icon"><%= @app_prospect.vendor ? @app_prospect.vendor.name : t('activerecord.options.app/prospect.vendor_id.none') %> </p>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-4">

    <div class="">
      <p class=""><%= App::Prospect.human_attribute_name('name') %></p>
      <p class="detail-input"><%= @app_prospect.name.present? ? @app_prospect.name : t('activerecord.options.general.blank') %></p>
    </div>

    <div class="">
      <p class=""><%= App::Prospect.human_attribute_name('phone') %></p>
      <p class="detail-input"><%= @app_prospect.phone.present? ? @app_prospect.phone : t('activerecord.options.general.blank') %></p>
    </div>

    <div class="">
