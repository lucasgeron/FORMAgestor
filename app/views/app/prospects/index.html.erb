<% content_for :ctas_primary do %>
  <%= link_to new_app_prospect_path, class: "btn-primary flex-none" do %>
    <%= icon('fa-solid','plus',class:'btn-icon') %>
    <%= App::Prospect.model_name.human %>
  <% end %>
<% end %>

<% provide :head_title, App::Prospect.model_name.human(count: 2) %>
<% provide :page_title, App::Prospect.model_name.human(count: 2) %>
<% provide :sidebar, render(partial: 'app/prospects/sidebar') %>

<% content_for :page_content do %>

  <% if @app_prospects.present? %>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-3 2xl:grid-cols-4 gap-4">
      <%= render(@app_prospects) %>
    </div>
  <%elsif @app_prospects.count.zero? %>
    <%= render partial: 'app/shared/has_no_entry', locals: { msg: t('views.app.prospects.form.has_no_entry').html_safe }  %>
  <% end %>

<%end%>
