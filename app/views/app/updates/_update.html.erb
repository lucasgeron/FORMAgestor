<div id="<%= dom_id update %>" class="card group" data-controller="reveal" data-reveal-hidden-class="grid">

  <div class="card-header">

    <div class="card-header-info card-header-animate">
      <p class="card-header-title"><%= link_to update, class:'card-header-title' do %>
          <%= icon('fa-solid','code-commit') %>
          <%= update.version %>
        <% end %>
      </p>
      <p class="card-header-subtitle card-header-subtitle-animate">

        <% if  update.description.present? %>
          <span class="text-xs">
            <%= icon('fa-solid','comment', class:'text-blue-600') %>
          </span>
        <% end %>
        <% if  update.added_features.present? %>
          <span class="text-xs">
            <%= icon('fa-solid','circle-check', class:'text-blue-600') %>
            <%=icon('fa-solid','caret-right')%>
            <%= convert_to_hash(update.added_features).count %>
          </span>
        <% end %>
        <% if  update.removed_features.present? %>
          <span class="text-xs">
            <%= icon('fa-solid','circle-xmark', class:'text-red-600') %>
            <%=icon('fa-solid','caret-right')%>
            <%= convert_to_hash(update.removed_features).count %>
          </span>
        <% end %>
        <% if  update.bugs_fixed.present? %>
          <span class="text-xs">
            <%= icon('fa-solid','bug-slash', class:'text-blue-600') %>
            <%=icon('fa-solid','caret-right')%>
            <%= convert_to_hash(update.bugs_fixed).count %>
          </span>
        <% end %>

      </p>
    </div>

    <%= button_tag class:'card-header-btn',  data: { action:"click->reveal#toggle" } do %>
      <%= icon('fa-solid','bars', class:'fa-sm')%>
    <%end if current_admin%>

  </div>

  <div data-reveal-target="item" class="card-popover" data-action="mouseleave->reveal#show">

    <%= link_to edit_app_update_path(update), class:'card-popover-btn-primary' do %>
      <%= icon('fa-solid', 'pen-to-square', class:'btn-icon') %>
      <p class=""> <%= t('views.app.general.edit')%></p>
    <%end%>

  </div>
</div>
