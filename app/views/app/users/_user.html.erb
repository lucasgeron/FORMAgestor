<div id="<%= dom_id user %>">

  <%= user.email %>
  
  <%= user.client.name %>
  <%= user.active ? 'ATIVO' : 'inativo ' %>
  
  <% if action_name != "show" %>
    <%= link_to "Show this user", app_user_path(user), class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this user', edit_app_user_path(user), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
