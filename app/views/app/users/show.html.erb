<% content_for :ctas_secondary do %>
  <%= link_to app_users_path, class: "btn-secondary-gray flex-none" do %>
    <%= icon('fa-solid','arrow-left', class:'-mx-1')%>
  <%end%>

  <%= link_to edit_app_user_path(@user), class: "btn-secondary flex-none" do %>
    <%= icon('fa-solid','pen-to-square', class:'-mx-1')%>
  <%end%>

  <%= button_to app_user_path(@user), method: :delete, class: "btn-delete flex-none" do %>
    <%= icon('fa-solid','trash-can', class:'-mx-1')%>
  <%end%>

<% end %>
   
<% provide :head_title, "#{t('views.app.general.showing')} #{User.model_name.human} " %>
<% provide :page_title, "#{t('views.app.general.showing')} #{User.model_name.human} " %>
<% provide :entry_id, "#{@user.id}" %>

<% content_for :page_content do %>
  <%= render "detail", user: @user %>
<%end%>