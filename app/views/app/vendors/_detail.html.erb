<div class="space-y-4">

  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">

    <div class="">
      <p class=""><%= App::Vendor.human_attribute_name('name')%></p>
      <p class="detail-input"><%= app_vendor.name  %></p>
    </div>

    <div class="">
      <p class=""><%= App::Vendor.human_attribute_name('role')%></p>
      <p class="detail-input"><%= app_vendor.role %></p>
    </div>

    <div class="">
      <p class=""><%= App::Vendor.human_attribute_name('phone')%></p>
      <p class="detail-input"><%= app_vendor.phone %></p>
    </div>

    <div class="">
      <p class=""><%= App::Vendor.human_attribute_name('email')%></p>
      <p class="detail-input"><%= app_vendor.email %></p>
    </div>

  </div>

  <%# USERS TITLE %>
  <div class="">
    <p class="font-bold text-2xl"> <%= App::Vendor.human_attribute_name('city_ids') %> </p>

    <% if app_vendor.cities.present? %>
      <div class="mt-2 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-3 2xl:grid-cols-4 gap-4">
        <%= render app_vendor.cities %>
      </div>
    <% else %>
       <%= render partial: 'app/shared/has_no_entry', locals: { msg: t('views.app.vendors.detail.has_no_entry').html_safe
                                                               } %>
    <% end %>
  </div>

</div>
