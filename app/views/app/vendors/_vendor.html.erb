<div id="<%= dom_id vendor %>" class='bg-gray-100  dark:bg-gray-900 rounded-lg p-4 space-y-2 group'>

  <div class="flex items-center justify-between">

    <div class="translate-y-1/4 group-hover:translate-y-0 transition duration-300">
      <%= link_to vendor.name, app_vendor_path(vendor), class:'font-medium hover:text-blue-600 ' %>
      <p class="opacity-0 group-hover:opacity-100 transition duration-300 "><%= vendor.role %></p>
    </div>

    <%= button_tag class:'btn-card', data: { popover_target: "popover-click-#{vendor.id}", popover_trigger: "click", popover_placement:"left" } do %>
      <%= icon('fa-solid','bars', class:'fa-sm')%>
    <%end%>

  </div>

  <div data-popover id="popover-click-<%=vendor.id%>" role="tooltip" class="absolute z-10 invisible inline-block w-auto text-xs transition-opacity duration-300 border bg-gray-100  border-gray-200 rounded-lg  opacity-0 dark:text-gray-400 dark:border-gray-600 dark:bg-gray-800">

    <div class="px-2 py-1 grid grid-flow-col ">

      <%= link_to edit_app_vendor_path(vendor), class:'inline-flex items-center py-1 px-2 hover:text-blue-600' do %>
        <%= icon('fa-solid', 'pen-to-square', class:'mr-1') %>
        <p class=""> <%= t('views.app.general.edit')%></p>
      <%end%>
    </div>
    <div data-popper-arrow></div>
  </div>

</div>
