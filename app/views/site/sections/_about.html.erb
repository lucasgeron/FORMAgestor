<section id="about" data-navigation-target="about_sec" class="h-screen grid place-items-center  ">
  <div class="inner-section-default    md:grid lg:grid-cols-2  items-center gap-4 ">


    <div class="grid space-y-4 ">
      <%# about.title %>
      <h2 data-aos="zoom-in" class="title"><%= t('views.site.about.title')%></h2>
      <%# about.description %>
      <p data-aos="zoom-in" data-aos-delay="50" class="description "><%= t('views.site.about.description')%></p>
      <%# about.note %>
      <hr class=" hidden lg:inline">
      <div data-aos="zoom-in" data-aos-delay="50" class="description  hidden lg:inline"><%= t('views.site.about.note', logo: "#{image_tag('favicon.svg', class:'h-4 inline')} #{image_tag('favtext-dark.svg', class:'h-4 dark:hidden inline')} #{image_tag('favtext-white.svg', class:'h-4 hidden dark:inline')}" ).html_safe  %></div>
    </div>
  
    <div class="drop-shadow-2xl  ">
      <%= image_tag('about/notebook.png', class:' mx-auto max-h-72 md:max-h-96 2xl:max-h-none my-4 md:my-10', data:{ aos:"zoom-in", aos_delay:"50", aos_duration:'700'} ) %>        
    </div>
  
    <div data-aos="zoom-in" data-aos-delay="50" data-aos-anchor=".about_aos_trigger" class="description lg:hidden"><%= t('views.site.about.note', logo: "#{image_tag('favicon.svg', class:'h-4 inline')} #{image_tag('favtext-dark.svg', class:'h-4 dark:hidden inline')} #{image_tag('favtext-white.svg', class:'h-4 hidden dark:inline')}" ).html_safe %></div>

  </div>

  <a data-aos="zoom-in" data-aos-delay="50" data-aos-anchor=".about_aos_trigger" data-aos-mirror="false"  href="#services"  data-controller="scroll-to" data-scroll-to-offset-value="110"  class="hidden lg:inline-flex items-center space-x-2">
      <span class=""><%= icon('fa-solid', 'arrow-down', class:"fa-bounce ", style:"--fa-bounce-height: 3px") %></span>
      <span class=""><%= t('views.site.about.cta') %></span>
  </a>
</section>



